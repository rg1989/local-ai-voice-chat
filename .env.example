# Local Voice Chatbot Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# LLM Settings (Ollama)
# =============================================================================
LLM_BASE_URL=http://localhost:11434
LLM_MODEL_NAME=qwen3:8b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512

# System prompt for the assistant
# LLM_SYSTEM_PROMPT="You are a helpful, friendly voice assistant..."

# =============================================================================
# Speech-to-Text Settings
# =============================================================================
STT_MODEL_NAME=mlx-community/whisper-large-v3-turbo
STT_LANGUAGE=en

# =============================================================================
# Text-to-Speech Settings
# =============================================================================
# Available voices:
#   American: af_heart, af_bella, af_sarah, af_nicole, af_sky, am_adam, am_michael
#   British: bf_emma, bf_isabella, bm_george, bm_lewis
TTS_VOICE=af_heart
TTS_SPEED=1.0
TTS_OUTPUT_SAMPLE_RATE=24000

# =============================================================================
# Voice Activity Detection Settings
# =============================================================================
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION_MS=250
VAD_MIN_SILENCE_DURATION_MS=500
VAD_SPEECH_PAD_MS=30

# =============================================================================
# Audio Settings
# =============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_DURATION_MS=30

# =============================================================================
# Web Server Settings
# =============================================================================
WEB_HOST=0.0.0.0
WEB_PORT=8000

# =============================================================================
# Debug Settings
# =============================================================================
DEBUG=false
LOG_AUDIO=false
